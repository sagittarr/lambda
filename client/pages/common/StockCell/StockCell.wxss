@import "../../../utils/icons.wxss";

.lisetview_data_container {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #e4e4e4;
}

.lisetview_item_left_container {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
    justify-content: center;
  align-items: center;  
}

.lisetview_item_middle_container {
  width: 40%;
  height: 100%;
  display: inline-block;  
  flex-direction: column;
  align-items: center;
  justify-content: center; 
  word-wrap:break-all;
  text-overflow:ellipsis;overflow:hidden;
}

.lisetview_item_zdf_container {
  width: 35%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.lisetview_item_right_container {
  width: 35%;
  height: 100%;
  display: flex;
  padding-left: 30rpx;
  /* padding-right: 30rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* font-size: 30rpx; */
   font-size-adjust: vmax ; 
}

.listview_item_zdf_bg {
  width: 140rpx;
  height: 58rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.listview_item_zdf {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
