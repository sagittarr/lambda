.search_bar {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 70rpx;
  border-style: solid;
  border-color: rgb(228, 228, 228);
  border-width: 1px;
  border-radius: 12rpx;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search_bar input {
  position: absolute;
  height: 100%;
  left: 60rpx;
  right: 60rpx;
}

.search_bar image {
  position: absolute;
  width: 40rpx;
  height: 100%;
  right: 20rpx;
}

.search_button {
  border-style: solid;
  border-color: rgb(228, 228, 228);
  border-width: 1px;
  border-radius: 12rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
